{
  "name": "angular-fusejs-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build @almothafar/angular-fusejs --configuration production",
    "build:docs": "ng build demo --configuration production --output-path docs --base-href /angular-fusejs/ && node scripts/post-build-docs.js",
    "build:all": "npm run build:prod && npm run build:docs",
    "watch": "ng build --watch --configuration development",
    "publish": "cd dist/almothafar/angular-fusejs/ && npm publish",
    "test": "ng test",
    "lint": "ng lint"
  },
  "prettier": {
    "printWidth": 140,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.4",
  "dependencies": {
    "@angular/common": "^21.0.2",
    "@angular/compiler": "^21.0.2",
    "@angular/core": "^21.0.2",
    "@angular/forms": "^21.0.2",
    "@angular/platform-browser": "^21.0.2",
    "@angular/router": "^21.0.2",
    "fuse.js": "^7.1.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.2",
    "angular-eslint": "21.0.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jsdom": "^27.2.0",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  }
}
